<div class="row">
  <div class="col-md-3">
    <div class="thumbnail center">
      <%= image_tag @listing.image.url %>
        <h3><%= @listing.name %></h3>

        <div class="star-rating" data-score= <%= @avg_rating %> ></div> 
        <p><%= "#{@reviews.length} reviews" %></p>

        <p><%= number_to_currency(@listing.price) %></p>
        <p><%= @listing.description %></p>
        <%= link_to "Write Review", new_listing_review_path(@listing), class: "btn btn-primary" %>

    </div>
  </div>
  <div class="col-md-9">


    <% if @reviews.blank? %>
      <h3>No reviews yet. Be the first to write one!</h3>
    <% else %>
        <thead>
          <tr>
            <th class="col-md-3"></th>
            <th class="col-md-9"></th>
          </tr>
        </thead>
        <table class="table">
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td>
                  <h4> <%= "#{review.user.first_name.capitalize} #{review.user.last_name.capitalize}" %></h4>
                  <p><%= review.created_at.strftime("%-m/%-d/%-y") %></p>
                </td>
                <td>
                  <div class="star-rating" data-score= <%= review.rating %>></div>
                  <p><%= h(review.comment).gsub(/\n/, '<br/>').html_safe %></p>
                </td>
              </tr>
            <% end %>
        </tbody>
      </table>

    <% end %>


  </div>
</div>

<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %>
<%= link_to 'Back', listings_path, class: "btn btn-link" %>

<script>

    $('.star-rating').raty({
      path: 'https://s3-us-west-1.amazonaws.com/yelpdemo-elizak/stars',
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
      }
    });


</script>